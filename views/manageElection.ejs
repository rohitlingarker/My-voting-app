<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <link rel="stylesheet" href="./css/index.css">
    <title><%=title%></title>
    <script>
        var token = document
            .querySelector('meta[name="csrf-token"]')
            .getAttribute("content")

        function startElection(id){
            fetch(`/elections/${id}/start`, {
                method: "put",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload();
                    }
                })
                .catch((err) => console.log(err));
        }
        function endElection(id){
            fetch(`/elections/${id}/end`, {
                method: "put",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.replace(`/elections/${id}/results`);
                    }
                })
                .catch((err) => console.log(err));
        }
        function deleteElection(id){
            fetch(`/elections/${id}`, {
                method: "delete",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.replace("/elections");
                    }
                })
                .catch((err) => console.log(err));
        }
    </script>
</head>
<body>
    <div>
        <a href="/">home</a> > <a href="/elections">elections</a> > <a href="/elections/<%=id%>"><%=electionName%></a>
      </div>
    <%- include('header.ejs') %>
    <a href="/signout"><button>SignOut</button></a>

    <h3><a href="/elections/<%=id%>"><%=electionName%></a></h3>
    <h4>There are <%=quesCount%> questions in the ballet of this election</h4>
    <% if (! onGoingStatus){%>
        <a href="/elections/<%=id%>/questions">Manage your questions</a>
    <%}else{%>
        <p>election running at:</p>
        <a id="vote" href="/elections/<%=id%>/vote">/elections/<%=id%>/vote</a>
        <%}%>
    <h4>There are currently <%=voterCount%> voters assigned for this election</h4>
    <a href="/elections/<%=id%>/voters">Manage voters</a>
    <div>
        <%if(!onGoingStatus){%>
            <button onclick="startElection(<%=id%>)">Start Election</button>
            <%}else{%>
                <button onclick="endElection(<%=id%>)">End Election</button>
        <%}%>

        <button onclick="deleteElection(<%=id%>)">Delete</button><br>
        <%if(onGoingStatus){%>
            <a href="/elections/<%=id%>/results"><button>Results</button></a>
        <%}%>
    </div>

    <script>
        const vote=document.getElementById("vote")
        vote.innerText=window.location.origin+vote.innerText
    </script>
</body>
</html>